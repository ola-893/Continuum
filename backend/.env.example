# ============================================================================
# NODE.JS BACKEND - ENVIRONMENT CONFIGURATION
# ============================================================================
# This file contains environment variables for the Node.js Express backend
# that orchestrates agent operations by calling the Python microservice.
# ============================================================================

# ----------------------------------------------------------------------------
# AIP AGENT PYTHON MICROSERVICE CONFIGURATION (REQUIRED)
# ----------------------------------------------------------------------------
# The Node.js backend communicates with the Python microservice via HTTP

# URL of the Python microservice that wraps the AIP Agent SDK
# Local development: http://localhost:5000
# Docker Compose: http://python-service:5000
# Production: https://your-python-service-domain.com
PYTHON_SERVICE_URL=http://localhost:5000

# Request timeout in milliseconds
# How long to wait for Python service responses before timing out
# Default: 30000 (30 seconds)
# Recommended: 30000-60000 for LLM operations
AIP_TIMEOUT=30000

# Maximum number of retry attempts for failed requests
# The service will retry with exponential backoff on retryable errors (5xx, timeout)
# Default: 3
# Recommended: 3-5 for production
AIP_MAX_RETRIES=3

# Base delay for exponential backoff (in milliseconds)
# Retry delays: baseDelay * 2^attempt (e.g., 1s, 2s, 4s)
# Default: 1000
AIP_RETRY_BASE_DELAY=1000

# ----------------------------------------------------------------------------
# LEGACY BITAGENT CONFIGURATION (OPTIONAL - FOR BACKWARD COMPATIBILITY)
# ----------------------------------------------------------------------------
# These settings are for the old BitAgent integration
# Can be removed if not using BitAgent

# BitAgent API key (if using BitAgent)
# Obtain from: https://bitagent.ai
BITAGENT_API_KEY=your_bitagent_api_key_here

# BitAgent network
# Options: bnb-testnet, bnb-mainnet
BITAGENT_NETWORK=bnb-testnet

# Unibase API key (if required by Unibase service)
UNIBASE_API_KEY=

# Unibase network
UNIBASE_NETWORK=

# ----------------------------------------------------------------------------
# CHAINGPT CONFIGURATION (OPTIONAL)
# ----------------------------------------------------------------------------
# ChainGPT provides Web3 AI chatbot and smart contract auditing features
# Obtain API key from: https://app.chaingpt.org

# ChainGPT API key
CHAINGPT_API_KEY=your_chaingpt_api_key_here

# ----------------------------------------------------------------------------
# BLOCKCHAIN CONFIGURATION
# ----------------------------------------------------------------------------

# BSC RPC URL for blockchain interactions
# Testnet: https://bsc-testnet.publicnode.com
# Mainnet: https://bsc-dataseed.binance.org
BSC_TESTNET_RPC_URL=https://bsc-testnet.publicnode.com

# ----------------------------------------------------------------------------
# SERVER CONFIGURATION
# ----------------------------------------------------------------------------

# Port for the Node.js Express server
# The frontend will connect to this port
# Default: 3001
PORT=3001

# Node environment
# Options: development, production, test
# Default: development
NODE_ENV=development

# Enable request logging
# Options: true, false
# Default: true
ENABLE_REQUEST_LOGGING=true

# ----------------------------------------------------------------------------
# CORS CONFIGURATION (OPTIONAL)
# ----------------------------------------------------------------------------

# Allowed origins for CORS
# Comma-separated list of allowed origins
# Example: http://localhost:3000,https://yourdomain.com
CORS_ORIGINS=http://localhost:3000

# ----------------------------------------------------------------------------
# MONITORING AND LOGGING (OPTIONAL)
# ----------------------------------------------------------------------------

# Log level
# Options: error, warn, info, debug
# Default: info
LOG_LEVEL=info

# Enable performance monitoring
# Options: true, false
# Default: false
ENABLE_PERFORMANCE_MONITORING=false
